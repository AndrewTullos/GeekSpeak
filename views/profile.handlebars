{{! Use the main layout defined in main.handlebars }}
{{!< layout "main"}}

<main class="profile-container">
	<h2>User Profile</h2>
	<section class="user-info">
		<h3>{{user.name}}</h3>
		<p>Email: {{user.email}}</p>
		<!-- Add more user details here if necessary -->
	</section>

	<section class="user-posts">
		<h3>Your Posts</h3>
		{{#if posts.length}}
			<ul class="posts-list">
				{{#each posts}}
					<li class="post-item">
						<h4>{{this.title}}</h4>
						<p>{{this.summary}}</p>
						<!-- Link to view or edit the post -->
						<a href="/post/{{this.id}}" class="btn">View</a>
					</li>
				{{/each}}
			</ul>
		{{else}}
			<p>You have not created any posts yet.</p>
		{{/if}}
	</section>
</main>

